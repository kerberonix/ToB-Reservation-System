@model TobReservationSystem.Models.Customer
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Review Customer</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Birthdate)
        @Html.EditorFor(m => m.Birthdate, new { htmlAttributes = new { @readonly = "readonly", @Value = Model.Birthdate.ToString("d MMM yyyy"), @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MembershipTypeId)
       @Html.EditorFor(m => m.MembershipType.Name, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
    </div>

    <!-- Hidden Fields -->
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Delete</button>
}