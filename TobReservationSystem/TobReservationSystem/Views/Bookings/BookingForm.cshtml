@model TobReservationSystem.ViewModels.BookingFormViewModel

@{

    ViewBag.Title = "Booking Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Booking</h2>

@using (Html.BeginForm("SaveNewBooking", "Bookings"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Destination)
        @Html.EditorFor(m => m.Destination, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DepartFromCenter)
        @Html.EditorFor(m => m.DepartFromCenter, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CustomerRefCode)
        @Html.TextBoxFor(m => m.CustomerRefCode, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CustomerRefCode)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TicketQuantity)
        @Html.DropDownListFor(m => m.TicketQuantity, Enumerable.Range(1, 10).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TicketQuantity)
    </div>
    <!-- Hidden Fields -->
    @Html.HiddenFor(m => m.CoachJourneyId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts {

    @Scripts.Render("~/bundles/jqueryval")

}