@model TobReservationSystem.Models.CoachJourney
@{
    ViewBag.Title = "Review Journey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Review Journey</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.DisplayFor(m => m.Destination)
    </div>
    <div class="form-group">
        @Html.DisplayFor(m => m.DateOfJourney)
    </div>
    <div class="form-group">
        @Html.DisplayFor(m => m.DepartFromCenter.Name)
    </div>
    <div class="form-group">
        @Html.DisplayFor(m => m.SeatsAvailable)
    </div>
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-primary">Delete</button>
}

