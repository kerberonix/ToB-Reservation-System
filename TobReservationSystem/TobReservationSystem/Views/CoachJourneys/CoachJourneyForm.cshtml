@model TobReservationSystem.ViewModels.CoachJourneyFormViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>

@using (Html.BeginForm("Save", "CoachJourneys"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CoachJourney.Destination)
        @Html.TextBoxFor(m => m.CoachJourney.Destination, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CoachJourney.DepartFromCenterId)
        @Html.DropDownListFor(m => m.CoachJourney.DepartFromCenterId, new SelectList(Model.DepartFromCenters,"Id", "Name"), "Departing From", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CoachJourney.DateOfJourney)
        @Html.TextBoxFor(m => m.CoachJourney.DateOfJourney, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CoachJourney.SeatsAvailable)
        @Html.TextBoxFor(m => m.CoachJourney.SeatsAvailable, new { @class = "form-control" })
    </div>
    <!-- Hidden Fields -->
    @Html.HiddenFor(m => m.CoachJourney.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}