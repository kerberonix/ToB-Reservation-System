@model TobReservationSystem.ViewModels.CoachJourneyFormViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>

@using (Html.BeginForm("Save", "CoachJourneys"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.CoachJourney.Destination)
        @Html.TextBoxFor(m => m.CoachJourney.Destination, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CoachJourney.Destination)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CoachJourney.DepartFromCenterId)
        @Html.DropDownListFor(m => m.CoachJourney.DepartFromCenterId, new SelectList(Model.DepartFromCenters,"Id", "Name"), "Departing From", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CoachJourney.DepartFromCenterId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CoachJourney.DateOfJourney)
        @Html.TextBoxFor(m => m.CoachJourney.DateOfJourney, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CoachJourney.DateOfJourney)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CoachJourney.TotalNumberOfTickets)
        @Html.TextBoxFor(m => m.CoachJourney.TotalNumberOfTickets, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CoachJourney.TotalNumberOfTickets)
    </div>
    <!-- Hidden Fields -->
    @Html.Hidden("CoachJourney.Id", (Model.CoachJourney != null) ? Model.CoachJourney.Id : 0)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}